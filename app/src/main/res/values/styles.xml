<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">#123456</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="LightSwitch" parent="Material.Widget.Switch">
        <item name="sw_trackColor">@drawable/color_track_light</item>
        <item name="sw_thumbColor">@drawable/color_thumb_light</item>
    </style>

    <style name="DarkSwitch" parent="Material.Widget.Switch">
        <item name="sw_trackColor">@drawable/color_track_dark</item>
        <item name="sw_thumbColor">@drawable/color_thumb_dark</item>
    </style>

    <style name="LightRadioButtonDrawable" parent="Material.Drawable.RadioButton">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="LightCheckBoxDrawable" parent="Material.Drawable.CheckBox">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <!-- Switch Style -->

    <style name="DarkRadioButtonDrawable" parent="Material.Drawable.RadioButton">
        <item name="rbd_strokeColor">@drawable/color_switch_dark</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="DarkCheckBoxDrawable" parent="Material.Drawable.CheckBox">
        <item name="cbd_strokeColor">@drawable/color_switch_dark</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>


    <style name="Animation.CustomPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>
